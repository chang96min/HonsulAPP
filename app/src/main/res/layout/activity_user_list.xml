<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".UserListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="right"
        android:background="#44B244">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@string/logo"
            app:srcCompat="@drawable/logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/roomnameTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/roomnameTXT"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/delroomBTN"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:background="#FFFFFF"
            android:contentDescription="@string/delroomBTN"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/trash" />

        <ImageButton
            android:id="@+id/exitroomBTN"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/exitroomBTN"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/exitroomicon" />

    </LinearLayout>

    <ListView
        android:id="@+id/user_listview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#FFFFFF">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp"
        android:layout_weight="1.8"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <Button
            android:id="@+id/halfBTN"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/hlaf"
            android:onClick="onClick" />

        <Button
            android:id="@+id/onceBTN"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/oneshot"
            android:onClick="onClick" />

        <Button
            android:id="@+id/fullBTN"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/full"
            android:onClick="onClick" />
    </LinearLayout>

</LinearLayout>